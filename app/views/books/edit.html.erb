<div class="form-box">
  <h3 class="sub-title">Editing Book</h3>
  <%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <div class="button">
      <%= f.submit "Update Book" %>
    </div>

  <% end %>

</div>
<div class="link">
  <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
</div>
