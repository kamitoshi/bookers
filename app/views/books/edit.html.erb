<div class="form-box">
  <h3 class="sub-title">Editing Book</h3>
  <% if @book.errors.any? %>
  <div class="error-box">
    <div class="error-text"><%= @book.errors.count %>errors prohibited this book from being saved:</div>
      <ul class="errors">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <div class="button">
      <%= f.submit "Update Book" %>
    </div>

  <% end %>

</div>
<div class="link">
  <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
</div>
