<div class="wrap">
  <h1 class="title">Books</h1>
  <% if @books.blank? %>
    <p>投稿がまだありません</p>
  <% else %>
    <table>
      <thead>
        <tr>
          <th class="content-title">Title</th>
          <th class="content-body">Body</th>
          <th class="show"></th>
          <th class="edit"></th>
          <th class="destroy"></th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td class="content-title"><%= book.title %></td>
          <td class="content-body"><%= book.body %></td>
          <td class="show"><%= link_to "Show", book_path(book) %></td>
          <td class="edit"><%= link_to "Edit", edit_book_path(book) %></td>
          <td class="destroy"><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
</div>
<div class="form-box">

  <h3 class="sub-title">New Book</h3>
  <% if @book.errors.any? %>
  <div class="error-box">
    <div class="error-text"><%= @book.errors.count %>errors prohibited this book from being saved:</div>
      <ul class="errors">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <div class="button">
      <%= f.submit "Create Book" %>
    </div>

  <% end %>
</div>
